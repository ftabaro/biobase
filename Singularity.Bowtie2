From: archlinux/base
Stage: release

%post
	pacman -Syu --noconfirm
  echo "/usr/local/lib" >> /etc/ld.so.conf.d/usr_local_lib.conf
	ldconfig

%files from compile
	/install_lib/lib /usr/
  /install/bin/ /usr/

%apphelp bowtie2
